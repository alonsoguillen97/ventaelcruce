  <script>
    // Declarar todos los elementos una sola vez
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const header = document.getElementById('header');
    const logoText = document.getElementById('logo-text');
    const navLinks = document.querySelectorAll('.nav-link');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

    // Mobile menu toggle
    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Smooth scroll for navigation links
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener('click', (e) => {
        e.preventDefault();
        const href = anchor.getAttribute('href');
        if (!href) return;
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start',
          });
          // Close mobile menu if open
          if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
          }
        }
      });
    });

    // Header transparency and scroll effect
    function updateHeader() {
      const scrollY = window.scrollY;
      const heroSection = document.getElementById('inicio');
      const heroHeight = heroSection ? heroSection.offsetHeight * 0.7 : 500; // 70% de la altura del hero

      console.log('UpdateHeader called - scrollY:', scrollY, 'heroHeight:', heroHeight);

      if (scrollY > heroHeight) {
        // Header con fondo verde oliva sólido después del scroll - Múltiples métodos
        if (header) {
          header.classList.add('bg-verde-oliva');
          header.style.backgroundColor = '#4a4d00';
          header.style.setProperty('background-color', '#4a4d00', 'important');
          header.classList.remove('bg-white', 'shadow-lg', 'backdrop-blur-sm', 'bg-gold-100');
        }
        if (logoText) {
          logoText.classList.add('text-white');
          logoText.classList.remove('text-navy-900');
        }

        // Cambiar colores de navegación a blanco
        navLinks.forEach((link) => {
          link.classList.add('text-white', 'hover:text-gray-200');
          link.classList.remove('text-navy-700', 'hover:text-navy-900');
        });

        // Cambiar colores de navegación móvil a blanco
        mobileNavLinks.forEach((link) => {
          link.classList.add('text-white', 'hover:text-gray-200');
          link.classList.remove('text-navy-700', 'hover:text-navy-900');
        });

        // Cambiar fondo del menú móvil a verde oliva sólido
        if (mobileMenu) {
          mobileMenu.style.backgroundColor = '#4a4d00 !important';
          mobileMenu.classList.remove('bg-white/95');
        }

        // Cambiar color del botón de menú móvil a blanco
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.add('text-white', 'hover:text-gray-200');
          mobileMenuBtn.classList.remove('text-navy-900', 'hover:text-navy-700');
        }
      } else {
        // Header con fondo dorado claro inicial
        if (header) {
          header.classList.add('bg-gold-100', 'shadow-lg');
          header.classList.remove('bg-verde-oliva');
          header.style.backgroundColor = '';
          header.style.removeProperty('background-color');
        }
        if (logoText) {
          logoText.classList.add('text-navy-900');
          logoText.classList.remove('text-white');
        }

        // Restaurar colores de navegación a navy con hover navy oscuro
        navLinks.forEach((link) => {
          link.classList.add('text-navy-700', 'hover:text-navy-900');
          link.classList.remove('text-white', 'hover:text-gray-200');
        });

        // Restaurar colores de navegación móvil a navy con hover navy oscuro
        mobileNavLinks.forEach((link) => {
          link.classList.add('text-navy-700', 'hover:text-navy-900');
          link.classList.remove('text-white', 'hover:text-gray-200');
        });

        // Restaurar fondo del menú móvil a dorado claro
        if (mobileMenu) {
          mobileMenu.classList.add('bg-gold-100');
          mobileMenu.style.backgroundColor = '';
        }

        // Restaurar color del botón de menú móvil a navy
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.add('text-navy-900', 'hover:text-navy-700');
          mobileMenuBtn.classList.remove('text-white', 'hover:text-gray-200');
        }
      }
    }

    // Ejecutar al cargar y al hacer scroll
    window.addEventListener('scroll', updateHeader);
    window.addEventListener('load', updateHeader);

    // DEBUGGING: Forzar color verde después de 3 segundos para verificar que funciona en Vercel
    setTimeout(() => {
      console.log('Forcing verde oliva color for debugging');
      const header = document.getElementById('header');
      if (header) {
        header.classList.add('bg-verde-oliva');
        header.style.backgroundColor = '#4a4d00';
        header.style.setProperty('background-color', '#4a4d00', 'important');
      }
    }, 3000);

    // Add animation on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px',
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in');
        }
      });
    }, observerOptions);

    // Observe sections for animation
    document.querySelectorAll('section').forEach((section) => {
      observer.observe(section);
    });
  </script>

