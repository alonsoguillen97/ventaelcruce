---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Venta El Cruce - Restaurante Tradicional">
  <!-- Navigation Header -->
  <header
    id="header"
    class="bg-gold-100 fixed top-0 z-50 w-full shadow-lg transition-all duration-500 ease-in-out"
  >
    <div class="mx-auto max-w-6xl px-4 py-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="flex items-center space-x-3">
            <div class="bg-gold-500 flex h-9 w-9 items-center justify-center">
              <span class="text-navy-900 text-lg font-bold">V</span>
            </div>
            <h1
              id="logo-text"
              class="font-elegant text-navy-900 text-xl font-bold transition-colors duration-500"
            >
              Venta El Cruce
            </h1>
          </div>
        </div>

        <div class="hidden items-center space-x-6 md:flex">
          <a
            href="#inicio"
            class="nav-link text-navy-700 hover:text-navy-900 border-b-2 border-transparent pb-1 text-sm font-medium tracking-wider uppercase transition-colors duration-300"
            >Inicio</a
          >
          <a
            href="#nosotros"
            class="nav-link text-navy-700 hover:text-navy-900 border-b-2 border-transparent pb-1 text-sm font-medium tracking-wider uppercase transition-colors duration-300"
            >Nosotros</a
          >
          <a
            href="#espacios"
            class="nav-link text-navy-700 hover:text-navy-900 border-b-2 border-transparent pb-1 text-sm font-medium tracking-wider uppercase transition-colors duration-300"
            >Espacios</a
          >
          <a
            href="#carta"
            class="nav-link text-navy-700 hover:text-navy-900 border-b-2 border-transparent pb-1 text-sm font-medium tracking-wider uppercase transition-colors duration-300"
            >Carta</a
          >
          <a
            href="/galeria"
            class="nav-link text-navy-700 hover:text-navy-900 border-b-2 border-transparent pb-1 text-sm font-medium tracking-wider uppercase transition-colors duration-300"
            >Galería</a
          >

          <a
            href="#contacto"
            class="nav-link text-navy-700 hover:text-navy-900 border-b-2 border-transparent pb-1 text-sm font-medium tracking-wider uppercase transition-colors duration-300"
            >Visítanos</a
          >
        </div>

        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button
            id="mobile-menu-btn"
            class="text-navy-900 hover:text-navy-700 text-3xl leading-none transition-colors duration-300"
          >
            <span>☰</span>
          </button>
        </div>

        <!-- Mobile menu -->
        <div
          id="mobile-menu"
          class="bg-gold-100 hidden px-6 py-4 backdrop-blur-sm transition-all duration-300 md:hidden"
        >
          <div class="space-y-2">
            <a
              href="#inicio"
              class="mobile-nav-link text-navy-700 hover:text-navy-900 block border-l-4 border-transparent py-3 pl-4 text-sm tracking-wider uppercase transition-colors duration-300"
              >Inicio</a
            >
            <a
              href="#nosotros"
              class="mobile-nav-link text-navy-700 hover:text-navy-900 block border-l-4 border-transparent py-3 pl-4 text-sm tracking-wider uppercase transition-colors duration-300"
              >Nosotros</a
            >
            <a
              href="#espacios"
              class="mobile-nav-link text-navy-700 hover:text-navy-900 block border-l-4 border-transparent py-3 pl-4 text-sm tracking-wider uppercase transition-colors duration-300"
              >Espacios</a
            >
            <a
              href="#carta"
              class="mobile-nav-link text-navy-700 hover:text-navy-900 block border-l-4 border-transparent py-3 pl-4 text-sm tracking-wider uppercase transition-colors duration-300"
              >Carta</a
            >
            <a
              href="/galeria"
              class="mobile-nav-link text-navy-700 hover:text-navy-900 block border-l-4 border-transparent py-3 pl-4 text-sm tracking-wider uppercase transition-colors duration-300"
              >Galería</a
            >

            <a
              href="#contacto"
              class="mobile-nav-link text-navy-700 hover:text-navy-900 block border-l-4 border-transparent py-3 pl-4 text-sm tracking-wider uppercase transition-colors duration-300"
              >Visítanos</a
            >
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="min-h-screen">
    <!-- Hero Section -->
    <section
      id="inicio"
      class="bg-navy-950 relative flex min-h-screen items-center overflow-hidden"
    >
      <!-- Background image with elegant overlay -->
      <div
        class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=1920&h=1080&fit=crop')] bg-cover bg-center"
      >
      </div>
      <div class="absolute inset-0 bg-linear-to-r from-black/85 via-black/50 to-black/20"></div>

      <div class="relative z-10 mx-auto h-full w-full max-w-7xl px-6 lg:px-12">
        <div class="flex min-h-screen flex-col justify-between py-12">
          <!-- Contenido superior -->
          <div class="flex-1 flex items-center">
            <div class="max-w-2xl">
              <div class="mb-8">
                <div class="bg-gold-400 mb-6 h-1 w-20"></div>
                <h1
                  class="font-elegant mb-4 text-4xl leading-tight font-bold tracking-wide text-white md:text-5xl lg:text-6xl"
                >
                  Venta El Cruce
                </h1>
                <p
                  class="mb-6 text-lg font-light tracking-wide italic md:text-xl"
                  style="color: #fffaeb;"
                >
                  Que no se pierda la costumbre
                </p>
                <div class="bg-gold-400 mb-8 h-1 w-28"></div>
              </div>
            </div>
          </div>

          <!-- Logo y botón en la parte inferior -->
          <div class="mt-12 lg:mt-0 flex items-center justify-between">
            <img 
              src="/Logo venta el cruce.png" 
              alt="Capricho Andaluz - Venta El Cruce"
              class="h-24 w-auto md:h-28 lg:h-32"
            />
            <a
              href="#carta"
              class="bg-gold-500 hover:bg-gold-400 border-gold-500 hover:border-gold-400 rounded-sm border-2 px-8 py-3 text-sm font-semibold tracking-wider text-white uppercase shadow-xl transition-all duration-300 hover:scale-105 hover:text-white md:px-10 md:py-4 md:text-base"
            >
              Descubrir Carta
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Introducción Section -->
    <section class="bg-white py-16">
      <div class="mx-auto max-w-4xl px-6 text-center">
        <h2 class="font-elegant text-navy-900 mb-8 text-3xl font-bold lg:text-4xl">
          VENTA EL CRUCE
        </h2>
        <div class="space-y-6 text-lg leading-relaxed text-gray-700">
          <p>
            En la <strong style="color: #c7c99b;">Venta El Cruce</strong> le hacemos un homenaje a 
            <strong style="color: #c7c99b;">El Capricho Andaluz</strong>… Ese buen café calentito acompañado de un buen desayuno 
            para comenzar el día, con el aroma del pan recién tostado y el sabor auténtico de nuestra tierra.
          </p>
          <p>
            En la Venta el Cruce te abrimos las puertas a un rincón donde la 
            <strong style="color: #c7c99b;">tradición y el sabor</strong> se encuentran. Nuestra venta acoge tanto a quienes 
            van de paso como a quienes deciden quedarse y volver una y otra vez, atraídos por el sabor y olor de nuestros 
            <strong style="color: #c7c99b;">desayunos y comida casera</strong>.
          </p>
          <p>
            Aquí podrás disfrutar de <strong style="color: #c7c99b;">productos ibéricos de la zona</strong>, seleccionados con mimo, 
            y de <strong style="color: #c7c99b;">guisos caseros</strong> elaborados siguiendo las recetas de siempre, esas que 
            huelen a hogar y a campo andaluz.
          </p>
          <p>
            Ven a disfrutar de un <strong style="color: #c7c99b;">ambiente familiar</strong>, donde cada plato cuenta una historia 
            y cada visita deja un recuerdo. Porque en <strong style="color: #c7c99b;">El Capricho Andaluz</strong>, más que comer… 
            se vive Andalucía.
          </p>
        </div>
      </div>
    </section>

    <!-- About Section - Alternating Background -->
    <section id="nosotros" class="bg-warm-50 relative py-24">
      <div class="mx-auto max-w-6xl px-6 lg:px-8">
        <!-- Desayunos - Imagen izquierda, texto derecha -->
        <div class="mb-20 grid items-center gap-16 lg:grid-cols-2">
          <div class="order-1">
            <div class="relative">
              <img
                src="https://images.unsplash.com/photo-1533089860892-a7c6f0a88666?w=600&h=400&fit=crop"
                alt="Desayunos"
                class="h-96 w-full object-cover lg:h-[400px]"
              />
            </div>
          </div>

          <div class="order-2">
            <div class="pl-8">
              <h2 class="font-elegant text-navy-900 mb-6 text-4xl font-bold lg:text-5xl">
                Desayunos
              </h2>
              <p class="mb-6 text-lg leading-relaxed text-gray-700">
                Comenzamos cada día con <strong style="color: #c7c99b;"
                  >desayunos tradicionales</strong
                > elaborados con productos de <strong style="color: #c7c99b;">máxima calidad</strong
                >.
              </p>
              <p class="mb-6 text-lg leading-relaxed text-gray-700">
                Desde nuestros <strong style="color: #c7c99b;">tostones artesanales</strong> hasta nuestros
                <strong style="color: #c7c99b;">huevos camperos</strong>, cada desayuno es una
                experiencia única.
              </p>
              <p class="text-lg leading-relaxed text-gray-700">
                Nuestro <strong style="color: #c7c99b;">café de tueste natural</strong> y nuestras <strong
                  style="color: #c7c99b;">mermeladas caseras</strong
                > completan una propuesta gastronómica que despierta todos los sentidos.
              </p>
            </div>
          </div>
        </div>

        <!-- Comidas - Imagen derecha, texto izquierda -->
        <div class="grid items-center gap-16 lg:grid-cols-2">
          <div class="order-2 lg:order-1">
            <div class="pr-8">
              <h2 class="font-elegant text-navy-900 mb-6 text-4xl font-bold lg:text-5xl">
                Comidas
              </h2>
              <p class="mb-6 text-lg leading-relaxed text-gray-700">
                Nuestro <strong style="color: #c7c99b;">amplio salón comedor</strong> te ofrece el espacio
                perfecto para disfrutar de <strong style="color: #c7c99b;"
                  >almuerzos y cenas memorables</strong
                >.
              </p>
              <p class="mb-6 text-lg leading-relaxed text-gray-700">
                En <strong style="color: #c7c99b;">Venta El Cruce</strong> cada comida es una <strong
                  style="color: #c7c99b;">celebración de sabores auténticos</strong
                > y tradición culinaria.
              </p>
              <p class="text-lg leading-relaxed text-gray-700">
                Todos nuestros platos son <strong style="color: #c7c99b;"
                  >elaborados por nuestro Chef</strong
                > y su equipo con la <strong style="color: #c7c99b;">mejor materia prima</strong>.
                Nuestra <strong style="color: #c7c99b;">zona de barra</strong> complementa la experiencia
                con exquisitas tapas.
              </p>
            </div>
          </div>

          <div class="order-1 lg:order-2">
            <div class="relative">
              <img
                src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=600&h=400&fit=crop"
                alt="Comidas"
                class="h-96 w-full object-cover lg:h-[400px]"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Nuestros Espacios Section -->
    <section id="espacios" class="bg-navy-950 relative py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <!-- Section Header -->
        <div class="mb-16 text-center">
          <div class="bg-gold-500 mx-auto mb-8 h-2 w-24"></div>
          <h2 class="font-elegant text-gold-300 mb-8 text-5xl font-bold tracking-wide lg:text-6xl">
            Nuestros Espacios
          </h2>
          <div class="bg-gold-500 mx-auto mb-8 h-1 w-32"></div>
          <p class="text-gold-100 mx-auto max-w-2xl text-xl leading-relaxed">
            Espacios únicos diseñados para ofrecerte la mejor experiencia gastronómica en cada
            momento del día.
          </p>
        </div>

        <!-- Grid de 4 elementos: 3 imágenes + 1 descripción -->
        <div class="mb-12 grid grid-cols-1 gap-6 lg:grid-cols-4">
          <!-- Imagen 1 - La Barra -->
          <div class="group relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1514933651103-005eec06c04b?w=400&h=500&fit=crop"
              alt="La Barra"
              class="h-80 w-full object-cover transition-transform duration-300 group-hover:scale-105 lg:h-96"
            />
          </div>

          <!-- Imagen 2 - Salón Principal -->
          <div class="group relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1554118811-1e0d58224f24?w=400&h=500&fit=crop"
              alt="Salón Principal"
              class="h-80 w-full object-cover transition-transform duration-300 group-hover:scale-105 lg:h-96"
            />
          </div>

          <!-- Imagen 3 - Zona Privada -->
          <div class="group relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1590846406792-0adc7f938f1d?w=400&h=500&fit=crop"
              alt="Zona Privada"
              class="h-80 w-full object-cover transition-transform duration-300 group-hover:scale-105 lg:h-96"
            />
          </div>

          <!-- Bloque de descripción con fondo navy - ÚLTIMO -->
          <div
            class="flex h-80 flex-col justify-center p-6 text-center lg:h-96"
            style="background-color: #4a4d00;"
          >
            <h2
              class="font-elegant mb-4 text-2xl font-bold tracking-wider text-white uppercase lg:text-3xl"
            >
              LA BARRA
            </h2>
            <p class="text-sm leading-relaxed font-light text-white lg:text-base">
              Nuestra premiada y reconocida barra representa la proa de nuestra embarcación al
              frente de la cual descubrirás un equipo de profesionales caracterizado por su simpatía
              y premura en el servicio.
            </p>
          </div>
        </div>

        <!-- Segunda fila: Bloque descriptivo PRIMERO -->
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-4">
          <!-- Bloque de descripción con color dorado - PRIMERO -->
          <div
            class="flex h-80 flex-col justify-center p-6 text-center lg:h-96"
            style="background-color: #c7c99b;"
          >
            <h2
              class="font-elegant mb-4 text-2xl font-bold tracking-wider text-white uppercase lg:text-3xl"
            >
              SALÓN PRINCIPAL
            </h2>
            <p class="text-sm leading-relaxed font-light text-white lg:text-base">
              Localizado en la planta principal de nuestro restaurante junto a nuestra Barra, está
              flanqueado por una pared totalmente acristalada con vistas a la Alameda Apodaca, en él
              se pueden acomodar un máximo de 45 comensales.
            </p>
          </div>

          <!-- Imagen 4 - Terrazas -->
          <div class="group relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=400&h=500&fit=crop"
              alt="Terraza"
              class="h-80 w-full object-cover transition-transform duration-300 group-hover:scale-105 lg:h-96"
            />
          </div>

          <!-- Imagen 5 - Cocina -->
          <div class="group relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?w=400&h=500&fit=crop"
              alt="Cocina"
              class="h-80 w-full object-cover transition-transform duration-300 group-hover:scale-105 lg:h-96"
            />
          </div>

          <!-- Imagen 6 - Bodega -->
          <div class="group relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=500&fit=crop"
              alt="Bodega"
              class="h-80 w-full object-cover transition-transform duration-300 group-hover:scale-105 lg:h-96"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Menu Section - Light Background for contrast -->
    <section id="carta" class="relative py-24" style="background-color: #faf8f5;">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mb-16 text-center">
          <div class="bg-gold-500 mx-auto mb-8 h-2 w-24"></div>
          <h2 class="font-elegant text-navy-900 mb-8 text-5xl font-bold tracking-wide lg:text-6xl">
            Nuestra Carta
          </h2>
          <div class="bg-gold-500 mx-auto mb-8 h-1 w-32"></div>
          <p class="text-navy-700 mx-auto max-w-2xl text-xl leading-relaxed">
            Platos elaborados con ingredientes frescos y recetas tradicionales que han deleitado a
            nuestros clientes durante décadas.
          </p>
        </div>

        <!-- Grid de 3 columnas para las categorías principales -->
        <div class="mb-16 grid gap-8 lg:grid-cols-3">
          <!-- ENSALADAS -->
          <div class="bg-warm-100 p-8">
            <div class="mb-8 text-center">
              <div class="bg-gold-500 mx-auto mb-4 h-2 w-16"></div>
              <h3
                class="font-elegant text-navy-900 mb-4 text-2xl font-bold tracking-wider uppercase"
              >
                Ensaladas
              </h3>
              <div class="bg-gold-500 mx-auto h-1 w-20"></div>
            </div>
            <div class="space-y-4">
              <div class="border-warm-300 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">Ensalada de Tomate</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">
                      con jamón, AOVE y sal de Cádiz
                    </p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >7.00€</span
                  >
                </div>
              </div>

              <div class="border-warm-300 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">La casera del huerto</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">(Mixta)</p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >9.00€</span
                  >
                </div>
              </div>

              <div class="pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">La Cabrera</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">
                      Con queso de cabra en rullo, miel y nueces
                    </p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >10.00€</span
                  >
                </div>
              </div>
            </div>
          </div>

          <!-- BOCADILLOS -->
          <div class="bg-warm-200 p-8">
            <div class="mb-8 text-center">
              <div class="bg-gold-500 mx-auto mb-4 h-2 w-16"></div>
              <h3
                class="font-elegant text-navy-900 mb-4 text-2xl font-bold tracking-wider uppercase"
              >
                Bocadillos
              </h3>
              <div class="bg-gold-500 mx-auto h-1 w-20"></div>
            </div>
            <div class="space-y-4">
              <div class="border-warm-400 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">
                      1. El Charcutero, a elegir:
                    </h4>
                    <p class="text-navy-600 text-sm leading-relaxed">
                      Jamón Ibérico, Lomo, Salchichón, Chorizo, Carne y Queso Manchego
                    </p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >8.00€</span
                  >
                </div>
              </div>

              <div class="border-warm-400 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">2. Serranito</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">
                      Ternasco asado con lomo Duroc, pimiento frito, Jamón, salsa verde
                    </p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >8.00€</span
                  >
                </div>
              </div>

              <div class="border-warm-400 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">3. El Brillante</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">
                      Anillos de calamar frito, Ali oli de Cantarranas y jamón ibérico
                    </p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >10.00€</span
                  >
                </div>
              </div>

              <div class="border-warm-400 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">4. Camarero</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">
                      Tomate y Caballa, pimientos, aceite de Oliva, ensalada y tomate
                    </p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >7.00€</span
                  >
                </div>
              </div>

              <div class="border-warm-400 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">5. Carne al Toro</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">en su salsa de tomate</p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >8.00€</span
                  >
                </div>
              </div>

              <div class="border-warm-400 border-b pb-3">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-navy-900 text-base font-semibold">6. Carrillada</h4>
                    <p class="text-navy-600 text-sm leading-relaxed">en su salsa Pedro Ximénez</p>
                  </div>
                  <span class="bg-navy-900 text-gold-300 ml-3 px-3 py-1 text-sm font-bold"
                    >10.00€</span
                  >
                </div>
              </div>

              <div class="pb-3">
