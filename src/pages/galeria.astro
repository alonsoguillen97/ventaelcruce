<script>
  // Declarar todos los elementos una sola vez
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.getElementById('header');
  const logoImg = document.getElementById('logo-img');
  const navLinks = document.querySelectorAll('.nav-link');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

  // Mobile menu toggle
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Gallery Filter Functionality
  const filterBtns = document.querySelectorAll('.gallery-filter-btn');
  const galleryItems = document.querySelectorAll('.gallery-item');

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter;

      // Update active button - remove active state from all buttons first
      filterBtns.forEach((b) => {
        b.classList.remove('active', 'bg-gold-500');
        b.classList.add('bg-gold-100');
      });

      // Add active state to clicked button
      btn.classList.add('active', 'bg-gold-500');
      btn.classList.remove('bg-gold-100');

      // Filter gallery items
      galleryItems.forEach((item) => {
        const category = (item as HTMLElement).dataset.category;
        if (filter === 'all' || category === filter) {
          (item as HTMLElement).style.display = 'block';
          setTimeout(() => {
            (item as HTMLElement).style.opacity = '1';
            (item as HTMLElement).style.transform = 'translateY(0)';
          }, 100);
        } else {
          (item as HTMLElement).style.opacity = '0';
          (item as HTMLElement).style.transform = 'translateY(20px)';
          setTimeout(() => {
            (item as HTMLElement).style.display = 'none';
          }, 300);
        }
      });
    });
  });

  // Lightbox Modal Functionality
  const modal = document.getElementById('lightbox-modal');
  const modalImage = document.getElementById('modal-image');
  const modalTitle = document.getElementById('modal-title');
  const modalDescription = document.getElementById('modal-description');
  const closeModal = document.getElementById('close-modal');

  galleryItems.forEach((item) => {
    item.addEventListener('click', () => {
      const img = item.querySelector('img') as HTMLImageElement;
      if (!img || !modalImage || !modalTitle || !modalDescription || !modal) return;

      const title = item.querySelector('h3')?.textContent || '';
      const description = item.querySelector('p')?.textContent || '';

      modalImage.src = img.src;
      modalImage.alt = img.alt;
      modalTitle.textContent = title;
      modalDescription.textContent = description;

      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
  });

  // Close modal
  closeModal?.addEventListener('click', () => {
    if (!modal) return;
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = 'auto';
  });

  // Close modal on background click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }
  });

  // Smooth scroll for navigation links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      if (!href) return;
      const target = document.querySelector(href);
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start',
        });
        // Close mobile menu if open
        if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('hidden');
        }
      }
    });
  });

  // Header transparency and scroll effect
  function updateHeader() {
    const scrollY = window.scrollY;
    const heroSection = document.getElementById('galeria-hero');
    const heroHeight = heroSection ? heroSection.offsetHeight * 0.7 : 500; // 70% de la altura del hero

    if (scrollY > heroHeight) {
      // Header con fondo verde oscuro casi gris (#2a2d1a) después del scroll
      if (header) {
        header.classList.add('bg-verde-oliva', 'shadow-lg');
        header.classList.remove('bg-transparent', 'pt-8');
        header.style.backgroundColor = '#2a2d1a';
        header.style.setProperty('background-color', '#2a2d1a', 'important');
      }

      // Mostrar logo
      if (logoImg) {
        logoImg.classList.remove('opacity-0');
        logoImg.classList.add('opacity-100');
      }

      // Cambiar navegación a texto más pequeño y hover gris
      navLinks.forEach((link) => {
        link.classList.add('text-white', 'hover:text-gray-200', 'text-sm');
        link.classList.remove('hover:text-gold-300', 'text-base');
      });

      // Cambiar colores de navegación móvil a blanco
      mobileNavLinks.forEach((link) => {
        link.classList.add('text-white', 'hover:text-gray-200');
        link.classList.remove('hover:text-gold-300');
      });

      // Cambiar fondo del menú móvil a verde oscuro
      if (mobileMenu) {
        mobileMenu.style.backgroundColor = '#2a2d1a';
        mobileMenu.classList.remove('bg-black/80');
      }

      // Color del botón de menú móvil permanece blanco
      if (mobileMenuBtn) {
        mobileMenuBtn.classList.add('text-white', 'hover:text-gray-200');
        mobileMenuBtn.classList.remove('hover:text-gold-300');
      }
    } else {
      // Header transparente inicial
      if (header) {
        header.classList.add('bg-transparent', 'pt-8');
        header.classList.remove('bg-verde-oliva', 'shadow-lg');
        header.style.backgroundColor = '';
        header.style.removeProperty('background-color');
      }

      // Ocultar logo
      if (logoImg) {
        logoImg.classList.remove('opacity-100');
        logoImg.classList.add('opacity-0');
      }

      // Restaurar navegación a texto blanco con hover dorado
      navLinks.forEach((link) => {
        link.classList.add('text-white', 'hover:text-gold-300', 'text-base');
        link.classList.remove('hover:text-gray-200', 'text-sm');
      });

      // Restaurar colores de navegación móvil
      mobileNavLinks.forEach((link) => {
        link.classList.add('text-white', 'hover:text-gold-300');
        link.classList.remove('hover:text-gray-200');
      });

      // Restaurar fondo del menú móvil a negro transparente
      if (mobileMenu) {
        mobileMenu.classList.add('bg-black/80');
        mobileMenu.style.backgroundColor = '';
      }

      // Restaurar color del botón de menú móvil
      if (mobileMenuBtn) {
        mobileMenuBtn.classList.add('text-white', 'hover:text-gold-300');
        mobileMenuBtn.classList.remove('hover:text-gray-200');
      }
    }
  }

  // Ejecutar al cargar y al hacer scroll
  window.addEventListener('scroll', updateHeader);
  window.addEventListener('load', updateHeader);

  // Add animation on scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px',
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fade-in');
      }
    });
  }, observerOptions);

  // Observe gallery items for animation
  galleryItems.forEach((item) => {
    observer.observe(item);
  });

  // Observe sections for animation
  document.querySelectorAll('section').forEach((section) => {
    observer.observe(section);
  });
</script>

